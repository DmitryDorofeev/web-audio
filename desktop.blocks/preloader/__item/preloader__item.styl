.preloader__item
    display block
    bottom 0px
    width 20px
    height 5px
    background-color #fff
    position absolute
    animation preloader 1.5s infinite ease-in-out
    z-index 11

    &_second
        left: 25px
        animation-delay: .2s

    &_third
        left: 50px;
        animation-delay: .4s

    &_fourth
        left: 75px
        animation-delay: .6s

    &_fifth
        left: 100px
        animation-delay: .8s


@keyframes preloader
    0% {
        height 5px
        transform translateY(0px)
        background $primary_color
    }
    25% {
        height 30px
        transform translateY(15px)
        background $secondary_text_color;
    }
    50% {
        height 5px
        transform translateY(0px)
        background $primary_color
    }
    100% {
        height 5px
        transform translateY(0px)
        background $primary_color
    }
